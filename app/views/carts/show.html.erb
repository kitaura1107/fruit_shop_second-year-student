<h1>ユーザーカートの中身</h1>

<% if @cart.present? && @cart.cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>個数</th>
        <th>単価</th>
        <th>小計</th>
        <th>数量変更</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each_with_index do |item, index| %>
        <tr>
          <td><%= link_to item.product.name, product_path(item.product) %></td>
          <td><%= item.quantity %></td>
          <td><%= "¥" + number_with_delimiter(item.product.price) %></td>
          <td><%= "¥" + number_with_delimiter(@item_totals[index]) %></td>
          <td>
            <%= form_with url: cart_item_path(item.id), method: :patch, local: true, data: { turbo: false } do %>
              <%= select_tag "cart_item[quantity]", options_for_select(0..99, item.quantity), onchange: "this.form.submit()" %>
            <% end %>
          </td>
          <td>
            <%= button_to 'カートから消す', cart_item_path(item.id), method: :delete, data: { turbo_confirm: '本当に削除しますか？' }, form: { data: { turbo: false } } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><strong>合計金額: <%= "¥" + number_with_delimiter(@cart_total) %></strong></p>

  <%= link_to "注文へ進む", new_order_path, class: "btn btn-primary" %>
<% else %>
  <p>カートは空です。</p>
<% end %>